<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Sửa Sản Phẩm"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="8dp">


        <EditText
            android:id="@+id/edtCategoryProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/grey_background"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Danh Mục"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="@color/green"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/edtdescribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/grey_background"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Chi Tiết Sản Phẩm"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/edtProductId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/grey_background"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Mã Sản Phẩm"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/edtNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/grey_background"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Tên Sản Phẩm"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/grey_background"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Giá Sản Phẩm"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/grey_background"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Số Lượt Phản Hồi (Review)"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/grey_background"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Số Lượt Đánh Giá (Score)"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/item_1" />

        <Button
            android:id="@+id/chooseFile_edt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chọn File" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:padding="15dp"
            android:drawableLeft="@drawable/save"
            android:layout_gravity="center"
            android:background="@drawable/green_btn3"
            android:text="Lưu"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>