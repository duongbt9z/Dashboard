<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddAdressActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Thêm Địa Chỉ"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="8dp">


        <EditText
            android:id="@+id/ad_name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/grey_background"
            android:drawableStart="@drawable/user"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Họ Tên"
            android:inputType="textPersonName"
            android:singleLine="false"
            android:padding="10dp"
            android:textColor="@color/green"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/ad_phone"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/grey_background"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Số Điện Thoại"
            android:inputType="text"
            android:singleLine="false"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/ad_city"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/grey_background"
            android:drawableStart="@drawable/address"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Tỉnh/Thành phố, Quận/Huyện, Phường/Xã"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/ad_street"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/grey_background"
            android:drawableStart="@drawable/address"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Tên đường, Tòa nhà, Số nhà"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/green"
            android:textSize="18sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/green_btn3"
            android:text="Hoàn Thành"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>